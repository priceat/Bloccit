<% if policy(Vote.new).create? %>
<div class="vote-arrows pull-left">
   <div><%= link_to " ", 
        post_up_vote_path(post),
        class: "glyphicon glyphicon-chevron-up #{user_voted(post)}", method: :post %>
   </div>
   <div><strong><%= post.points %></strong>
   </div>
  
   <div><%= link_to " ", 
   post_down_vote_path(post), 
   class: "glyphicon glyphicon-chevron-down #{user_voted(post)}",  method: :post %>
  </div>
 </div>
<% end %>